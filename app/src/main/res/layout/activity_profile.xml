<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:gravity="center"
        android:text="Perfil"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textButtonEditarDados"
        android:layout_width="185dp"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:drawableTint="#000000"
        android:onClick="navegarParaHistory"
        android:text="Editar Dados"
        android:textSize="24sp"
        app:drawableRightCompat="@android:drawable/ic_menu_edit"
        app:layout_constraintTop_toBottomOf="@+id/textViewLogin"
        tools:layout_editor_absoluteX="30dp" />


    <TextView
        android:id="@+id/textButtonHistorico"
        android:layout_width="212dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:onClick="navegarParaHistory"
        android:text="Historico"
        android:textSize="24sp"
        app:drawableRightCompat="@drawable/ic_history_foreground"
        app:layout_constraintTop_toBottomOf="@+id/textButtonEditarDados"
        tools:layout_editor_absoluteX="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>