<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:gravity="center"
        android:text="Perfil"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textButtonEditarDados"
        android:layout_width="185dp"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:drawableTint="#000000"
        android:onClick="navegarParaData"
        android:text="Editar Dados"
        android:textSize="24sp"
        app:drawableRightCompat="@android:drawable/ic_menu_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLogin" />

    <TextView
        android:id="@+id/textButtonHistorico"
        android:layout_width="212dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:drawableTint="#000000"
        android:onClick="navegarParaHistory"
        android:text="Historico"
        android:textSize="24sp"
        app:drawableRightCompat="@drawable/ic_history_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textButtonEditarDados" />

    <TextView
        android:id="@+id/textButtonGerirUtilizadores"
        android:layout_width="218dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:onClick="navegarParaUsers"
        android:drawableTint="#000000"
        android:text="Gerir Utilizadores"
        android:textSize="24sp"
        app:drawableRightCompat="@android:drawable/ic_menu_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textButtonHistorico" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="35dp"
        android:text="Logout"
        android:onClick = "onLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textButtonGerirUtilizadores"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:onClick = "onLogout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textButtonHistorico"
        app:layout_constraintVertical_bias="0.095" />


</androidx.constraintlayout.widget.ConstraintLayout>